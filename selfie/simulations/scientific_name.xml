<!-- 
#######################################################################################
# Execution value of the workflow's parameters 
# All the input and output directories and files are relative to the BASE_DIR
#######################################################################################
-->
<root>
	<tasks>
		<task name="ocr">
			<parameter name="ocr_input_dir">datasets/aocr_mix100/ocr/ocropus</parameter>
			<parameter name="include">True</parameter>
			<parameter name="specimens_list">datasets/aocr_mix100/specimen_list.txt</parameter>
			<parameter name="metric">duration</parameter>
			<parameter name="output_dir">selfie/results/scientific_name/ocr</parameter>			
		</task>
		<task name="sn_suffix_id">
			<parameter name="fulltext_dir">selfie/results/scientific_name/ocr</parameter>
			<parameter name="suffix_dir">datasets/aocr_mix100/sn_suffix/ocropus</parameter>
			<parameter name="metric">duration</parameter>
			<parameter name="output_dir">selfie/results/scientific_name/sn_suffix_id</parameter>
		</task>
		<task name="sn_dict_norm">
			<parameter name="candidates_file">selfie/results/scientific_name/sn_suffix_id/accepted/accepted.tsv</parameter>
			<parameter name="norm_dir">datasets/aocr_mix100/sn_dict_norm/ocropus</parameter>
			<parameter name="metric">duration</parameter>
			<parameter name="output_dir">selfie/results/scientific_name/sn_dict_norm</parameter>
		</task>
		<task name="sn_dict_extr">
			<parameter name="rej_suf_file">selfie/results/scientific_name/sn_suffix_id/rejected/rejected.txt</parameter>
			<parameter name="rej_nor_file">selfie/results/scientific_name/sn_dict_norm/rejected/rejected.txt</parameter>
			<parameter name="dict_extr_dir">datasets/aocr_mix100/sn_dict_extr/ocropus</parameter>			
			<parameter name="metric">duration</parameter>
			<parameter name="output_dir">selfie/results/scientific_name/sn_dict_extr</parameter>
		</task>
		<task name="crowdsource">
			<parameter name="specimens">selfie/results/scientific_name/sn_dict_extr/rejected/rejected.txt</parameter>
			<parameter name="crowd_data">datasets/aocr_mix100/crowd/terms/zooniverse/scientific_name.tsv</parameter>
			<parameter name="metric">duration</parameter>
			<parameter name="output_file">selfie/results/scientific_name/crowdsource/scientific_name.tsv</parameter>
		</task>
		<task name="consensus">
			<parameter name="crowd_file">selfie/results/scientific_name/crowdsource/scientific_name.tsv</parameter>
			<parameter name="consensus_dir">datasets/aocr_mix100/consensus/scientific_name</parameter>
			<parameter name="metric">duration</parameter>
			<parameter name="output_dir">selfie/results/scientific_name/consensus</parameter>
		</task>
	</tasks>
	<!-- The base dir for the metrics' parameters is BASE_DIR/humain/metrics -->
	<metrics>
		<script name="add.py">
			<parameter name="mf">selfie/results/scientific_name/ocr/metrics/duration.csv</parameter>
			<parameter name="mf">selfie/results/scientific_name/sn_suffix_id/accepted/metrics/duration.csv</parameter>
			<parameter name="mf">selfie/results/scientific_name/sn_suffix_id/rejected/metrics/duration.csv</parameter>
			<parameter name="mf">selfie/results/scientific_name/sn_dict_norm/accepted/metrics/duration.csv</parameter>
			<parameter name="mf">selfie/results/scientific_name/sn_dict_norm/rejected/metrics/duration.csv</parameter>
			<parameter name="mf">selfie/results/scientific_name/sn_dict_extr/accepted/metrics/duration.csv</parameter>
			<parameter name="mf">selfie/results/scientific_name/sn_dict_extr/rejected/metrics/duration.csv</parameter>
			<parameter name="mf">selfie/results/scientific_name/crowdsource/metrics/duration.csv</parameter>
			<parameter name="mf">selfie/results/scientific_name/consensus/accepted/metrics/duration.csv</parameter>
			<parameter name="mf">selfie/results/scientific_name/consensus/rejected/metrics/duration.csv</parameter>
			<parameter name="output_file">selfie/results/scientific_name/duration.csv</parameter>		
		</script>
		<script name="quality_measure.py">
			<parameter name="accepted_file">selfie/results/scientific_name/sn_dict_norm/accepted/accepted.tsv</parameter>
			<parameter name="accepted_file">selfie/results/scientific_name/sn_dict_extr/accepted/accepted.tsv</parameter>
			<parameter name="accepted_file">selfie/results/scientific_name/consensus/accepted/accepted.tsv</parameter>
			<parameter name="ground_truth">datasets/aocr_mix100/gtruth/terms/scientific_name.tsv</parameter>
			<parameter name="output_file">selfie/results/scientific_name/quality.csv</parameter>
		</script>
	</metrics>
	<!-- The base dir for the post-processing' parameters is BASE_DIR/humain/post-processing -->
	<post-processing>
		<script name="basic_stats.py">
			<parameter name="metric_file">selfie/results/scientific_name/quality.csv</parameter>
			<parameter name="output_file">selfie/results/scientific_name/quality_stats.txt</parameter>
		</script>
		<script name="basic_stats.py">
			<parameter name="metric_file">selfie/results/scientific_name/duration.csv</parameter>
			<parameter name="output_file">selfie/results/scientific_name/duration_stats.txt</parameter>
		</script>
	</post-processing>
</root>
